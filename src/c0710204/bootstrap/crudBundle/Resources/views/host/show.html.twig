{% extends '::base.html.twig' %}
{% use 'c0710204testsy2Bundle:host:js.html.twig' %}
{% block body -%}
    <h1>host</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Sites</th>
                <td>{{ entity.sites }}</td>
            </tr>
            <tr>
                <th>Renewtime</th>
                <td>{{ entity.renewtime|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Information</th>
                <td>{{ entity.information }}</td>
            </tr>
            <tr>
                <th>Hostsite</th>
                <td>{{ entity.hostSite }}</td>
            </tr>
            <tr>
                <th>Hostip</th>
                <td>{{ entity.hostIp }}</td>
            </tr>
            <tr>
                <th>Hostuser</th>
                <td>{{ entity.hostUser }}</td>
            </tr>
            <tr>
                <th>Hostpass</th>
                <td>{{ entity.hostPass }}</td>
            </tr>
            <tr>
                <th>Ftpsite</th>
                <td>{{ entity.ftpSite }}</td>
            </tr>
            <tr>
                <th>Ftpuser</th>
                <td>{{ entity.ftpUser }}</td>
            </tr>
            <tr>
                <th>Ftppass</th>
                <td>{{ entity.ftpPass }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ entity.size }}</td>
            </tr>
            <tr>
                <th>Bandwidth</th>
                <td>{{ entity.bandwidth }}</td>
            </tr>
            <tr>
                <th>Cputime</th>
                <td>{{ entity.cputime }}</td>
            </tr>
            <tr>
                <th>Ram</th>
                <td>{{ entity.ram }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('host') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('host_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
