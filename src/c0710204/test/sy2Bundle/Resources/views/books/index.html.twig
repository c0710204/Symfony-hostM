{% extends '::base.html.twig' %}

{% block body -%}
    <h1>books list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Site</th>
                <th>Type</th>
                <th>Bookid</th>
                <th>Title</th>
                <th>Author</th>
                <th>Count</th>
                <th>Updatetime</th>
                <th>Intro</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('books_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.site }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.bookid }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.count }}</td>
                <td>{% if entity.updatetime %}{{ entity.updatetime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.intro }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('books_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('books_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('books_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
